@model Domain.DTO.TicketDto
@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <h1 class="h1">Are you sure you wish to delete this Ticket?</h1>
    <p class="text-body font-weight-bold">Movie: @Model.MovieTitle</p>
    <p class="text-body font-weight-bold">Seat: @Model.Seat</p>
    <p class="text-body font-weight-bold">Price: @Model.Price</p>
    <p class="text-body font-weight-bold">Date: @Model.Date</p>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Yes</button>
        <a class="btn btn-outline-primary" asp-action="Index">No</a> 
    </form>
</div>

<div class="card bg-dark text-white">
    <img class="card-img" height="300px" src="https://img.freepik.com/free-vector/cinema-room-background_1017-8728.jpg?t=st=1687779118~exp=1687779718~hmac=6824d5c7910cdd06ec02f07bce626453f46c4b33d2a46ee4a939ca80e1f202af" alt="Card image">
    <div class="card-img-overlay">
    </div>
</div>